# Both sourceware.org and gcc.gnu.org seem to have problems when connecting
# from AWS, which complicates Depot builds. We use SourceHut mirrors.

[url "https://git.sr.ht/~sourceware/binutils-gdb"]
    insteadOf = https://sourceware.org/git/binutils-gdb.git

[url "https://git.sr.ht/~sourceware/glibc"]
    insteadOf = https://sourceware.org/git/glibc.git

[url "https://github.com/mirror/newlib-cygwin.git"]
    insteadOf = https://sourceware.org/git/newlib-cygwin.git

[url "https://git.sr.ht/~sourceware/binutils-gdb"]
    insteadOf = https://sourceware.org/git/binutils-gdb.git

[url "https://git.sr.ht/~sourceware/gcc"]
    insteadOf = https://gcc.gnu.org/git/gcc.git

[url "https://git.linaro.org/toolchain/dejagnu.git"]
    insteadOf = https://git.savannah.gnu.org/git/dejagnu.git

[url "https://github.com/bminor/musl.git"]
    insteadOf = https://git.musl-libc.org/git/musl
